<section class="section hero is-fullheight is-error-section">
	<div class="hero-body">
		<div class="container">
			<div class="columns is-centered">
				<div class="column is-two-fifths">
					<div class="card has-card-header-background">
						<header class="card-header">
							<p class="card-header-title">
								<span class="icon"><i class="mdi mdi-lock default"></i></span>
								<span>Sign up </span>
							</p>
							<a href="/" class="button is-small">Home Page</a>
						</header>
						<div class="card-content">
							<%- include("../includes/messages.ejs") %>
								<form method="POST" action="?token=<%= token %>">
									<div class="field">
										<label class="label">current Password</label>
										<div class="control">
											<input value="<%= flash.form_body?.current_password||"" %>"
												style="direction: ltr;" type="password" autocomplete="on"
												name="current_password" class="input" required>
										</div>
									</div>

									<div class="field">
										<label class="label">New Password</label>
										<div class="control">
											<input value="<%= flash.form_body?.new_password||"" %>"
												style="direction: ltr;" type="password" autocomplete="on"
												name="new_password" class="input" required>
										</div>
									</div>
									<div class="field">
										<label class="label">Confirm password</label>
										<div class="control">
											<input style="direction: ltr;" type="password" autocomplete="on"
												name="confirm_password" class="input" required>
										</div>
									</div>

									<!-- hcaptcha component -->
									<div class="field ">
										<label class="label">captcha</label>
										<div class="control px-4 mx-4 ">
											<%- include("../includes/hcaptcha/hcaptcha.ejs") %>
										</div>
									</div>
									<!-- <hr> -->
									<div class="field is-grouped">
										<div class="control">
											<button type="submit" class="button is-black">
												Submit
											</button>
										</div>

									</div>
									<span>already have an account ? <a href="/login">Sign in</a></span>
								</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</section>